@model List<Product_Catalog.DTOs.ProductDTO>

<div class="row">
    @if (Model.Count == 0)
    {
        <div class="col-12 text-center">
            <p>No products found.</p>
        </div>
    }
    else
    {
        foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@product.CategoryName</h6>
                        <p class="card-text">Price: @product.Price.ToString("C")</p>
                        @* <p class="card-text">Created On: @product..ToShortDateString()</p> *@
                    </div>
                </div>
            </div>
        }
    }
</div>
