@model Product_Catalog.DTOs.UserVM

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link href="/css//LoginStyle.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
</head>
<body>
    <div class="wrapper">
        <div class="title"><span>Register</span></div>
        <form asp-action="Register" asp-controller="Account">
            <div class="row">
                <i class="fas fa-user"></i>
                <input asp-for="UserName" type="text" name="UserName" placeholder="text" required />
                <span asp-validation-for="UserName"></span>
            </div>
            <div class="row">
                <i class="fas fa-user"></i>
                <input asp-for="Email" type="email" name="Email" placeholder="Email" required />
                <span asp-validation-for="UserName"></span>

            </div>
            <div class="row">
                <i class="fas fa-lock"></i>
                <input asp-for="Password" type="password" placeholder="Password" name="Password" required />
                <span asp-validation-for="Password" class="text-danger"></span>

            </div>
            <div class="row">
                <i class="fas fa-lock"></i>
                <input asp-for="confirmPassword" type="password" placeholder="Password" name="confirmPassword" required />
                <span asp-validation-for="confirmPassword"></span>

            </div>
            <div class="row button">
                <input type="submit" value="Register" />
            </div>
            <div class="signup-link">Not a member? <a href="#">Login</a></div>
        </form>
    </div>
</body>
</html>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<partial name="_ValidationScriptsPartial" />
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
}
